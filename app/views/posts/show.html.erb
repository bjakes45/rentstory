<div class='container text-center'>
	<div class='card'>
		<h3><strong><%= @post.title %></strong></h3>
	</div>
	<div class='row'>
		<div class='col-sm-6'>
			<% if @post.address.present? and @post.street.present? %>
				<div class='card'>
					<h6 class='text-muted'>Address: <%= @post.address %> <%= @post.street %></h6>
				</div>
			<% end %>
		</div>
		<div class='col-sm-6'>
			<% if @post.landlord.present? %>
				<div class='card'>
					<h6 class='text-muted'>Landlord: <%= @post.landlord %></h6>
				</div>
			<% end %>
		</div>
	</div>
	<h6><strong><%= @post.body %></strong></h6>
</div>
<div class='footer'>
	<div class='container text-center'>
		<div class='row'>
			<div class='col-sm-6'>
				<%= link_to root_path, class: 'btn btn-dark form-control footer-btn' do %>
					<%= fa_icon "home", text: "Home" %>
				<% end %>
			</div>
			<div class='col-sm-6'>
				<div class='card'>
					<h6 class='text-muted'><span data_toggle:"tooltip", title:"Topic"><%= @post.topic.name %> </span><%= user_badge_generator %><%= admin_badge_generator %><%= flag_link(@post.id) %></h6>
				</div>
			</div>
		</div>
	</div>
</div>